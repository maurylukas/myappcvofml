FloatLayout:
    # background
    canvas:
        Rectangle:
            size: self.size
            pos: self.pos
            texture: Gradient.horizontal (get_color_from_hex ("#477fad"), get_color_from_hex ("#9bb77c"))

    # screen title
    GridLayout:
        pos_hint: {"right": 1, "top": 1}
        size_hint: 1, 0.05
        rows: 1
        cols: 1
        Label:
            id: titulo
            text: "A little bit about me"
            bold: True

    # screen space
    ScreenManager:
        pos_hint: {"right": 1, "top": 0.95}
        size_hint: 1, 0.95
        id: manager
        Home:
            name: "home"
            id: home
        Resume:
            name: "resume"
            id: resume
        Projects:
            name: "projects"
            id: projects
        Spacial:
            name:"spacial"
            id: spacial
        Colony:
            name:"colony"
            id: colony
        Site:
            name:"site"
            id: site
        Maze:
            name:"maze"
            id: maze
        Outback:
            name:"outback"
            id: outback
        Fight:
            name:"fight"
            id: fight
        Platform:
            name:"platform"
            id: platform
        Data_Science:
            name: "data science"
            id: datascience