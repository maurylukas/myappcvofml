                    pos_hint: {"right": 1, "top": 0.5}
                    size_hint: 1, 0.2
                    text: "2018-2019: Independent investment advisor"
                    italic: True
                    text_size: self.width, None
                    size_hint: 1, None
                    height: self.texture_size [1]
