                    pos_hint: {"right": 1, "top": 0.2}
                    size_hint: 1, 0.2
                    text: "2016-2017: Programmer, designer, scriptwriter and co-founder of Futura Games"
                    italic: True
                    text_size: self.width, None
                    size_hint: 1, None
                    height: self.texture_size [1]

