                    pos_hint: {"right": 1, "top": 0.8}
                    size_hint: 1, 0.2
                    text: "2006-2021: Computer software and hardware maintenance freelancer"
                    italic: True
                    text_size: self.width, None
                    size_hint: 1, None
                    height: self.texture_size [1]
