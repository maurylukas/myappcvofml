<Home>:
    FloatLayout:
        ScrollView:
            pos_hint: {"right": 1, "top": 1}
            size_hint: 1, 0.9
            GridLayout:
                rows: 3
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                row_default_height: "200dp"
                    #row_force_default: True
                padding: 10
                spacing: 10

                GridLayout:
                    rows: 1
                    cols: 2
                    spacing: 10

                    # image
                    Image:
                        source: "mycv/img/eu.jpg"

                    # contacts
                    FloatLayout:
                        # texts
                        GridLayout:
                            pos_hint: {"right": 0.9, "top": 1}
                            size_hint: 0.6, 1
                            rows: 4
                            cols: 1
                            padding: 10
                            LabelButton:
                                text: "My E-mail"
                                on_release: app.copiar ()
                            LabelButton:
                                text: "My LinkedIn"
                                on_release: webbrowser.open ("www.linkedin.com")
                            LabelButton:
                                text: "My GitHub"
                                on_release: webbrowser.open ("www.github.com")
                            LabelButton:
                                text: "My Europass"
                                on_release: webbrowser.open ("www.europa.eu/europass/en")
                        # icons
                        GridLayout:
                            pos_hint: {"right": 0.2, "top": 1}
                            size_hint: 0.2, 1
                            rows: 4
                            cols: 1
                            ImageButton:
                                source: "mycv/img/email.png"
                                on_release: app.copiar ()
                            ImageButton:
                                source: "mycv/img/linkedin.png"
                                on_release: webbrowser.open ("www.linkedin.com")
                            ImageButton:
                                source: "mycv/img/github.png"
                                on_release: webbrowser.open ("www.github.com")
                            ImageButton:
                                source: "mycv/img/europass.png"
                                on_release: webbrowser.open ("www.europa.eu/europass/en")

                # about me
                Label:
                    text: "Born in Brazil. Ready for the world. I'm a full-time father of a couple of the cutest cats and husband of the most beautiful girl. I love learning more and more about almost everything and solving problems as if my life depended on it. I believe in liberty more than anything and, therefore, that NOBODY should NEVER have the power to force how someone should live out their lives."
                    text_size: self.width, None
                    #size_hint: 1, None
                    height: self.texture_size [1]
                Image:
                    source: "mycv/img/nos.jpg"

        # buttons
        FloatLayout:
            pos_hint: {"right": 1, "top": 0.1}
            size_hint: 1, 0.1

            # background
            canvas:
                Color:
                    rgb: get_color_from_hex ("#17a2b8")
                    #rgb: get_color_from_hex ("#343a40")
                Rectangle:
                    size: self.size
                    pos: self.pos

            GridLayout:
                pos_hint: {"right": 1, "top": 0.9}
                size_hint: 1, 0.8
                rows: 1
                cols: 2

                # resume button
                ImageButton:
                    source: "mycv/img/resume.png"
                    on_release: app.alternar ("resume")

                # projects button
                ImageButton:
                    source: "mycv/img/projects.png"
                    on_release: app.alternar ("projects")