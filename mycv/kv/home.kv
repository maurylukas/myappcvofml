<Home>:
    FloatLayout:
        ScrollView:
            pos_hint: {"right": 1, "top": 1}
            size_hint: 1, 0.9
            GridLayout:
                rows: 2
                cols: 1
                size_hint_y: None
                height: self.minimum_height
                row_default_height: "300dp"
                row_force_default: True
                padding: 10
                spacing: 10

                FloatLayout:
                    spacing: 20
                    # image
                    Image:
                        pos_hint: {"right": 0.5, "top": 1}
                        size_hint: 0.5, 1
                        source: "mycv/img/eu.jpg"

                    # email
                    Label:
                        pos_hint: {"right": 1, "top": 1}
                        size_hint: 0.4, 0.25
                        text: "maurylukas@yahoo.com"
                    Image:
                        pos_hint: {"right": 0.6, "top": 1}
                        size_hint: 0.1, 0.25
                        source: "mycv/img/email.png"

                    # linkedin
                    Label:
                        pos_hint: {"right": 1, "top": 0.75}
                        size_hint: 0.4, 0.25
                        text: "LinkedIn"
                    Image:
                        pos_hint: {"right": 0.6, "top": 0.75}
                        size_hint: 0.1, 0.25
                        source: "mycv/img/linkedin.png"

                    # github
                    Label:
                        pos_hint: {"right": 1, "top": 0.5}
                        size_hint: 0.4, 0.25
                        text: "Github"
                    Image:
                        pos_hint: {"right": 0.6, "top": 0.5}
                        size_hint: 0.1, 0.25
                        source: "mycv/img/github.png"

                    # europass
                    Label:
                        pos_hint: {"right": 1, "top": 0.25}
                        size_hint: 0.4, 0.25
                        text: "EuroPass"
                    Image:
                        pos_hint: {"right": 0.6, "top": 0.25}
                        size_hint: 0.1, 0.25
                        source: "mycv/img/europass.png"

                GridLayout:
                    rows: 2
                    cols: 1
                    spacing: 10
                    padding: 10
                    # about me
                    Label:
                        text: "Born in Brazil. Ready for the world. I'm a full-time father of a couple of the cutest cats and husband of the most beautiful girl. I love learning more and more about almost everything and solving problems as if my life depended on it. I believe in liberty more than anything and, therefore, that NOBODY should NEVER have the power to force how someone should live out their lives."
                        text_size: self.width, None
                        size_hint: 1, None
                        height: self.texture_size [1]
                    Image:
                        source: "mycv/img/nos.jpg"

        # buttons
        FloatLayout:
            pos_hint: {"right": 1, "top": 0.1}
            size_hint: 1, 0.1

            # background
            canvas:
                Color:
                    rgb: get_color_from_hex ("#343a40")
                Rectangle:
                    size: self.size
                    pos: self.pos

            # resume button
            #LabelButton:
                #pos_hint: {"right": 0.55, "top": 0.6}
                #size_hint: 0.2, 0.2
                #text: "Resume"
                #on_release: app.alternar ("resume")
            ImageButton:
                pos_hint: {"right": 0.45, "top": 0.9}
                size_hint: 0.4, 0.8
                source: "mycv/img/resume.png"
                on_release: app.alternar ("resume")

            # projects button
            #LabelButton:
                #pos_hint: {"right": 0.9, "top": 0.6}
                #size_hint: 0.2, 0.2
                #text: "Projects"
                #on_release: app.alternar ("projects")
            ImageButton:
                pos_hint: {"right": 0.95, "top": 0.9}
                size_hint: 0.4, 0.8
                source: "mycv/img/projects.png"
                on_release: app.alternar ("projects")