<Fight>:
    ScrollView:
        GridLayout:
            #rows: 3
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            row_default_height: "200dp"
            #row_force_default: True
            padding: 10
            spacing: 30

            Label:
                text: "A prototype of a fighting game that a group of classmates from college and I made, where I helped programming. It was never properly finished as viable product. But two people can still have some fun controlling those picturesque figures."
                italic: True
                text_size: self.width, None
                #size_hint: 1, None
                height: self.texture_size [1]
            Image:
                source: "mycv/img/luta 1.jpg"
            Image:
                source: "mycv/img/luta 3.jpg"