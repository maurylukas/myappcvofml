<Spacial>:
    ScrollView:
        GridLayout:
            #rows: 3
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            row_default_height: "200dp"
            #row_force_default: True
            padding: 20
            spacing: 20

            Label:
                text: "My first project. I made it back in 2015, when I was on my first year at college, using HTML, CSS and JavaScript. It's a cross-browser starship game where you have to shoot asteroids and also try to avoid being hit by them as the difficulty (and their numbers) increases."
                italic: True
                text_size: self.width, None
                #size_hint: 1, None
                height: self.texture_size [1]
            Image:
                source: "mycv/img/spacial.jpg"