<Site>:
    ScrollView:
        GridLayout:
            #rows: 3
            cols: 1
            size_hint_y: None
            height: self.minimum_height
            row_default_height: "200dp"
            #row_force_default: True
            padding: 20
            spacing: 20

            LabelButton:
                text: "My website version of this app. Same content and some more. Click here to go check it out!"
                italic: True
                text_size: self.width, None
                #size_hint: 1, None
                height: self.texture_size [1]
                on_release: webbrowser.open ("https://maurylukas.herokuapp.com")
            Image:
                source: "mycv/img/site.jpg"